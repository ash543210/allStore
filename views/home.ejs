<% layout('layouts/boilerplate')%>
<div class="container-fluid">
    <div class="row justify-content-around">
        <% for(product of products) { %>
              <div class="card mt-3" style="width: 18rem;">
                <img src="<%=product.images[0].thumbnail %>" class="card-img-top mb-auto" alt="...">
                <div class="card-body ">
                    <a href="/<%=product._id %> " class="card-link" style="font-size: 1.5rem; text-decoration: none;"><%=product.name %></a>
                    <h5 class="card-text"><%=product.price %> </h5>
                </div>
              </div>
          <% } %>
    </div>
      
</div>